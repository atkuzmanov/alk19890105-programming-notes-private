function initCodeMirror(n){n.find('div[data-class="code-mirror-read-only"]').each(function(n,t){startCodeMirror(t)})}function startCodeMirror(n){n=$(n);var i=n.text(),r=n.attr("data-language"),t=$("<textarea>").text(i);n.replaceWith(t);CodeMirror.fromTextArea(t[0],{lineNumbers:!0,matchBrackets:!0,mode:r,theme:"neat",showCursorWhenSelecting:!0,undoDepth:100,indentUnit:4,lineWrapping:!0,readOnly:!0})}function changePageOnMoreComments(){var n=$(this),u=parseInt(n.attr("data-total")),f=Math.ceil((u-2)/5),t=n.attr("href").split("="),i=parseInt(t[1])+1,r;i>f?n.parent().parent().remove():(r=t[0]+"="+i,n.attr("href",r));jQuery("time.timeago").timeago()}function applyCommentsVoting(){initCodeMirror($(this).parent().parent().parent());return}$(function(){$('div[data-class="code-mirror-read-only"]').each(function(n,t){startCodeMirror(t)})})